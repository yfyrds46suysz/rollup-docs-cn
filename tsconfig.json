{
    "compilerOptions": {
        "pretty": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "diagnostics": true,
        "lib": ["es5", "es6", "dom"],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "outDir": "./dist/typings",
        "skipLibCheck": true,
        "declaration": true
    },
    "include": [
        "typings/**/*.d.ts",
        "src",
        "bin",
        "browser"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
